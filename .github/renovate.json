{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":disableRateLimiting",
    ":automergeDigest",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies"],
  "stabilityDays": 3,
  "packageRules": [
    {
      "matchPaths": [".github/workflows/*.yml"],
      "labels": ["github-actions"],
      "automerge": true
    },
    {
      "packageNames": ["docker.io/php"],
      "allowedVersions": "<8"
    }
  ]
}
