{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":automergeDigest",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPaths": [
        ".github/workflows/*.yml"
      ],
      "labels": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "packageNames": [
        "docker.io/php"
      ],
      "allowedVersions": "<8"
    }
  ]
}